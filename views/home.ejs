                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
            </select>
          </div>
          <div class="form-group">
            <label for="height">Height</label>
            <input
              type="height"
              id="height"
              name="height"
              class="form-control"
              placeholder="Enter Height in cms"
            />
            <br>
            <div class="form-group">
                <label for="weight">Weight</label>
                <input
                  type="weight"
                  id="weight"
                  name="weight"
                  class="form-control"
